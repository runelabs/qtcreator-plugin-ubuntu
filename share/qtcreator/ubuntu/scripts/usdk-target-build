  name: {FULLNAME}
  os: ubuntu
  release: {SERIES}
  variant: default
templates:
  "/etc/hostname":
    template: hostname.tpl
    when:
    - create
  "/etc/hosts":
    template: hosts.tpl
    when:
    - create
"""

